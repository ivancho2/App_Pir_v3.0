extends ../layout/layout_dashboard

block content
  .row
    .col-lg-12
      h1.page-header(align='center')
        | Registro Grupo de Modulos
    if info_error != undefined && info_error.length
      .col-lg-12
        .alert.alert-warning
          strong Alert!
          |  #{info_error}
    if info_success != undefined && info_success.length
      .col-lg-12
        .alert.alert-success
          strong Alert!
          |  #{info_success}
  .row
    .col-lg-12
      .panel.panel-green
        .panel-heading
          h3.panel-title Registrar Grupo Modulos:
        .panel-body
          form(role='form',action='Registrar_Grupo_Modulo', method='post')
            .col-lg-6
              .form-group
                label Nombre del Grupo de Modulos (Unico):
                input.form-control(placeholder='Ej: Pasillo 3',required='',name='nombre_Grupo_Modulos')
              .form-group
                label Descripcion:
                textarea.form-control(name='descripcion_Grupo_Modulos',placeholder='Descripcion...', rows='3',required='')
            .col-lg-6
              .form-group
                label Estado inicial (Switch):
                .col-lg-12
                  label.switch
                    input.inputdemo(name='estado_switch_Grupo_Modulos',type='checkbox', checked='')
                    .slider.round
              .col-lg-4
                button.btn.btn-success(type='submit') Confirmar y Enviar
              .col-lg-4
                button.btn.btn-warning(type='reset')
                  i.fa.fa-edit
                  |   Limpiar Todo
