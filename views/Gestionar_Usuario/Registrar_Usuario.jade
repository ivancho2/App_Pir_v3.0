extends ../layout/layout_dashboard

block content
  .row
    .col-lg-12
      h1.page-header
        | Registro de Usuarios
    if info_error != undefined && info_error.length
      .col-lg-12
        .alert.alert-warning
          strong Alert!
          |  #{info_error}
    if info_success != undefined && info_success.length
      .col-lg-12
        .alert.alert-success
          strong Alert!
          |  #{info_success}
  .row
    .col-lg-12
      .panel.panel-green
        .panel-heading
          h3.panel-title Registrar Usuario:
        .panel-body
          form(role='form',action='Registrar_Usuario', method='post')
            .col-lg-6
              .form-group
                label Identificacion:
                input.form-control(placeholder='(Solo numeros)',required='',onkeypress='return justNumbers(event);',name='Identificacion')
              .form-group
                label Nombres:
                input.form-control(placeholder='Nombre(s)', required='',name='Nombres')
              .form-group
                label Apellidos:
                input.form-control(placeholder='Apellido(s)', required='',name='Apellidos')
            .col-lg-6
              label Usuario:
              .form-group.input-group
                span.input-group-addon @
                input.form-control(type='text', placeholder='Username',required='',name='Usuario')
              label Password:
              .form-group.input-group
                span.input-group-addon P
                input.form-control(type='text', placeholder='Password',required='',name='Password')
              .form-group
                label Rol de Usuario:
                .radio
                  label
                    input#optionsRadios1(type='radio', name='optionsRadios', value='1', checked='')
                    | Administrador
                .radio
                  label
                    input#optionsRadios2(type='radio', name='optionsRadios', value='2')
                    | Jefe de Seguridad
                .radio
                  label
                    input#optionsRadios3(type='radio', name='optionsRadios', value='3')
                    | Auxiliar de Seguridad
              button.btn.btn-success(type='submit') Confirmar y Enviar
              button.btn.btn-warning(type='reset')
                i.fa.fa-edit
                |   Limpiar Todo
