doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title SB Admin - Bootstrap Admin Template
    // Bootstrap Core CSS
    link(href='css/bootstrap.min.css', rel='stylesheet')
    // Custom CSS
    link(href='css/sb-admin.css', rel='stylesheet')
    // Custom Fonts
    link(href='font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
  body
    #wrapper
      // Navigation
      #page-wrapper
        .container-fluid
          .col-lg-12
            .row
              .col-lg-6
                h1.page-header
                  strong | APP LOGIN
                p.help-block
                  | App para el Control Luminico UDLA
        .row
          .col-lg-12
            // Page Heading
            // /.row

            .row
              .col-lg-6
                .panel.panel-green
                  .panel-heading
                    h3.panel-title Registre sus Credenciales de acceso:
                  .panel-body
                    .col-lg-12
                      if info != undefined && info.length
                        .alert.alert-warning
                          strong Ups!
                          |  #{info}
                    form(role='form',action='/Login', method='post')
                      .col-lg-12
                        label Usuario:
                        .form-group.input-group
                          span.input-group-addon @
                          input.form-control(name='usuario',type='text', placeholder='Username',required='')
                        label Password:
                        .form-group.input-group
                          span.input-group-addon P
                          input.form-control(name='password',type='password', placeholder='Password',required='')
                        .col-lg-6
                          button.btn.btn-success(type='submit') Ingresar
                        .col-lg-6
                        button.btn.btn-warning(type='reset')
                          i.fa.fa-edit
                          |   Limpiar Todo

          // /.row
    // /#wrapper
    // jQuery
    script(src='js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')
